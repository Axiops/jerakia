#!/usr/bin/env ruby

require 'jacaranda'
require 'json'
req = Jacaranda::Request.new(
  :key => 'port',
  :namespace => [ 'apache' ],
  :policy => :craig,
  :lookup_type => :cascade,
  :merge       => :array,
  :metadata => { :environment => 'development' }
) 

jac = Jacaranda.new

answer = jac.lookup(req)
puts answer.payload.to_json
