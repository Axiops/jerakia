#!/usr/bin/env ruby

require 'jacaranda'
require 'json'
req = Jacaranda::Request.new(
  :key => 'configdata',
  :namespace => [ 'apache' ],
  :policy => "craig",
  :lookup_type => "cascade",
  :merge       => :array,
  :metadata => { :environment => 'development' }
) 

jac = Jacaranda.new

answer = jac.lookup(req)
p answer
puts answer.payload.to_json
